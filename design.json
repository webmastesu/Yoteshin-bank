{
  "designSystem": {
    "name": "Yoteshin Bank Movie App",
    "version": "1.0",
    "description": "A cinematic design system for movie streaming app with atmospheric backgrounds"
  },
  "colorPalette": {
    "backgrounds": {
      "primary": {
        "type": "gradient",
        "colors": ["#1e3a8a", "#1e1b4b", "#0f172a", "#000000"],
        "direction": "radial"
      }
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#e2e8f0",
      "tertiary": "#94a3b8"
    },
    "interactive": {
      "buttonPrimary": "rgba(0, 0, 0, 0.6)",
      "buttonSecondary": "rgba(0, 0, 0, 0.4)",
      "border": "rgba(255, 255, 255, 0.3)"
    }
  },
  "components": {
    "buttons": {
      "glassmorphism": true,
      "backdropBlur": true,
      "borderRadius": "0.5rem"
    }
  }
}
